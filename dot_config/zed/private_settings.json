{
  "context_servers": {
    "moon": {
      "source": "extension",
      "enabled": true,
      "settings": {}
    },
    "mise": {
      "source": "extension",
      "enabled": false,
      "settings": {}
    },
    "postgres-context-server": {
      "enabled": false,
      "source": "extension",
      "settings": {
        "database_url": "postgresql://postgres:postgres@localhost:5432/mydatabase"
      }
    }
  },
  "search": {
    "case_sensitive": false,
    "button": false
  },
  "minimap": {
    "display_in": "all_editors",
    "current_line_highlight": "all"
  },
  "agent": {
    "play_sound_when_agent_done": true,
    "always_allow_tool_actions": true,
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4.5"
    },
    "button": true,
    "commit_message_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4"
    }
  },
  "show_edit_predictions": true,
  "edit_predictions": {
    "mode": "eager"
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "icon_theme": "Colored Zed Icons Theme Dark",
  "theme": "Ros√© Pine Moon",
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "project_panel": {
    "dock": "left",
    "auto_fold_dirs": false,
    "button": false
  },
  "ensure_final_newline_on_save": true,
  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "on_yank",
    "use_smartcase_find": true,
    "toggle_relative_line_numbers": true,
    "highlight_on_yank_duration": 400
  },
  "relative_line_numbers": true,
  "scrollbar": { "show": "never" },
  "toolbar": {
    "quick_actions": false,
    "breadcrumbs": true,
    "selections_menu": false
  },
  "scroll_beyond_last_line": "off",
  "tab_bar": {
    "show": true,
    "show_tab_bar_buttons": false,
    "show_nav_history_buttons": false
  },
  "bottom_dock_layout": "left_aligned",
  "active_pane_modifiers": {
    "inactive_opacity": 0.9
  },
  "ui_font_family": "JetBrainsMono Nerd Font Mono",
  "ui_font_size": 13,
  "buffer_font_family": "JetBrainsMono Nerd Font Mono",
  "buffer_font_size": 13.0,
  "vertical_scroll_margin": 5,
  "show_whitespaces": "all",
  "line_indicator_format": "long",
  "preferred_line_length": 120,
  "show_wrap_guides": true,
  "wrap_guides": [120],
  "command_aliases": {
    "W": "w",
    "Wq": "wq",
    "Q": "q"
  },
  "terminal": {
    "font_family": "JetBrainsMono Nerd Font Mono",
    "copy_on_select": true,
    "button": false,
    "toolbar": {
      "breadcrumbs": false
    }
  },
  "calls": {
    "mute_on_join": true,
    "share_on_join": false
  },
  "collaboration_panel": {
    "button": false
  },
  "notification_panel": {
    "button": false
  },
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": true,
    "show_parameter_hints": false,
    "show_other_hints": false,
    "toggle_on_modifiers_press": {
      "platform": true,
      "shift": true
    }
  },
  "languages": {
    "Shell Script": {
      "tab_size": 2,
      "formatter": {
        "external": {
          "command": "/opt/homebrew/bin/shfmt",
          "arguments": ["-i", "2", "-ci", "-bn", "-ln", "bash"]
        }
      }
    },
    "Terraform": {
      "formatter": {
        "external": {
          "command": "/opt/homebrew/bin/terraform",
          "arguments": ["fmt", "-"]
        }
      }
    },
    "HCL": {
      "formatter": {
        "external": {
          "command": "/Users/dwooldridge/.local/share/mise/installs/terragrunt/latest/bin/terragrunt",
          "arguments": ["hclfmt", "--terragrunt-hclfmt-stdin"]
        }
      }
    },
    "Python": {
      "language_servers": ["ruff"],
      "format_on_save": "on",
      "formatter": [
        {
          "language_server": { "name": "ruff" }
        }
      ]
    },
    "YAML": {
      "auto_indent_on_paste": false,
      "tab_size": 2
    }
  },
  "lsp": {
    "yaml-language-server": {
      "settings": {
        "yaml": {
          "formatter": "language_server",
          "format": {
            "enable": true,
            "singleQuote": false,
            "printWidth": 160,
            "bracetSpacing": false
          },
          "completion": true,
          "schemaStore": {
            "enable": true
          }
        }
      }
    }
  },
  "file_types": {
    "Fish": ["**/*.fish.tmpl"],
    "Go": ["**/*.tmpl"],
    "Helm": ["**/templates/**/*.tpl", "**/templates/**/*.yaml"],
    "Nginx": ["**/nginx.conf", "**/nginx/*.conf"],
    "Shell Script": ["**/*.sh.j2", "**/packages/*/build"],
    "TOML": ["**/.prototools"],
    "Tera (TOML)": ["**/*.toml.tera"],
    "Tera (YAML)": ["**/*.yml.tera", "**/*.yaml.tera"],
    "YAML": ["**/.ansible-lint", "**/.yamllint"],
    "ini": ["**/*.ini", "**/ansible.cfg"]
  }
}
