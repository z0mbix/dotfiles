{
  "assistant": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-3-7-sonnet"
    },
    "version": "2"
  },
  "show_edit_predictions": true,
  "edit_predictions": {
    "mode": "eager"
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "icon_theme": "Material Icon Theme",
  "theme": "Zedokai Darker (Filter Octagon)",
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "project_panel": {
    "dock": "right"
  },
  "ensure_final_newline_on_save": true,
  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "on_yank",
    "use_multiline_find": true,
    "use_smartcase_find": true,
    "toggle_relative_line_numbers": true,
    "highlight_on_yank_duration": 400
  },
  "relative_line_numbers": true,
  "scrollbar": { "show": "never" },
  "scroll_beyond_last_line": "off",
  "ui_font_family": "JetBrainsMono Nerd Font Mono",
  "ui_font_size": 13,
  "buffer_font_family": "JetBrainsMono Nerd Font Mono",
  "buffer_font_size": 13.0,
  "show_whitespaces": "all",
  "show_line_endings": true,
  "preferred_line_length": 120,
  "show_wrap_guides": true,
  "wrap_guides": [120],
  "inactive_opacity": 0,
  "command_aliases": {
    "W": "w",
    "Wq": "wq",
    "Q": "q"
  },
  "terminal": {
    "font_family": "JetBrainsMono Nerd Font Mono",
    "copy_on_select": true
  },
  "calls": {
    "mute_on_join": true,
    "share_on_join": false
  },
  "collaboration_panel": {
    "button": false
  },
  "chat_panel": {
    "button": "never"
  },
  "notification_panel": {
    "button": false
  },
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": true,
    "show_parameter_hints": false,
    "show_other_hints": false,
    "toggle_on_modifiers_press": {
      "platform": true,
      "shift": true
    }
  },
  "languages": {
    // "Just": {
    //   "tab_size": 4,
    //   "indent_size": 4,
    //   "formatter": {
    //     "external": {
    //       "command": "/opt/homebrew/bin/just",
    //       "arguments": ["--dump"]
    //     }
    //   }
    // },
    "Shell Script": {
      "tab_size": 2,
      "indent_size": 2,
      "indent_style": "space",
      "formatter": {
        "external": {
          "command": "/opt/homebrew/bin/shfmt",
          "arguments": ["-i", "2", "-ci", "-s", "-bn"]
        }
      }
    },
    "Terraform": {
      "formatter": {
        "external": {
          "command": "/opt/homebrew/bin/terraform",
          "arguments": ["fmt", "-"]
        }
      }
    },
    "HCL": {
      "formatter": {
        "external": {
          "command": "/opt/homebrew/bin/terragrunt",
          "arguments": ["hclfmt", "--terragrunt-hclfmt-stdin"]
        }
      }
    },
    "YAML": {
      "auto_indent_on_paste": false
    }
  },
  "lsp": {
    "yaml-language-server": {
      "settings": {
        "yaml": {
          "formatter": "language_server",
          "format": {
            "enable": true,
            "singleQuote": false,
            "printWidth": 160,
            "bracetSpacing": false
          },
          "completion": true,
          "schemaStore": {
            "enable": true
          }
        }
      }
    }
  },
  "file_types": {
    "Fish": ["**/*.fish.tmpl"],
    "Go": ["**/*.yaml.tmpl"],
    "Helm": ["**/templates/**/*.tpl", "**/templates/**/*.yaml", "**/templates/**/*.yml"],
    "Shell Script": ["**/*.sh.j2"],
    "YAML": ["**/.ansible-lint", "**/.yamllint"],
    "ini": ["**/*.ini", "**/ansible.cfg"]
  }
}
