[user]
	name = David Wooldridge (z0mbix)
	email = zombie@zombix.org
	editor = vim
	signingkey = FFCE5C105D81AB88
[commit]
	gpgsign = true
	template = ~/.gitmessage
[github]
	user = z0mbix
[push]
	default = current
[color]
    ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = cyan
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = cyan
	whitespace = red reverse
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[core]
	whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
	excludesfile = ~/.gitignore
	pager = less -FRSX
	quotepath = false
[alias]
	alias = !git config -l | grep ^alias | cut -c 7- | sort
	br = branch
	branch-commit-diff = !"f() { git log --graph --abbrev-commit --date=relative master..$@; }; f"
	branch-diff = !"f() { git diff master $@; }; f"
	branch-toggle = checkout -
	cat = -p cat-file -p
	changelog = log --pretty=format:\" * %s\"
	ci = commit
	co = checkout
	dc = diff --cached
	df = diff
	diff-last-commit = diff HEAD^ HEAD
	ds = diff --stat
	in = !git fetch && git log --pretty=oneline --abbrev-commit --graph ..@{upstream}
	last = cat-file commit HEAD
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	log-last = log -n 1
	lol = log --decorate --pretty=oneline --abbrev-commit
	ls = ls-files
	ls-ignored = ls-files --exclude-standard --ignored --others
	out = log --graph --oneline --pretty=format:'%Cred%h%Cgreen %cd %Creset- %s' --abbrev-commit --date=relative --graph @{upstream}..
	pr = !"pr() { git fetch origin pull/$1/head:pr-$1; git checkout pr-$1; }; pr"
	prune = fetch --prune
	home = rev-parse --show-toplevel
	sa = stash apply
	sd = stash show --patch
	since = !git log $(git merge-base --fork-point master)..HEAD
	sl = stash list
	sp = stash pop
	ss = stash save
	st = status -sb
	stash-all = stash save --include-untrackedÂ§
	uncommit = reset --soft HEAD^
	unstage = reset HEAD
[advice]
	statusHints = false
[diff]
	tool = icdiff
	renames = copies
	mnemonicprefix = true
[merge]
	stat = true
	summary = true
[diff "exif"]
	textconv = exif
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path =
[credential]
	helper = osxkeychain
[help]
	autocorrect = 1
[pull]
	default = current
