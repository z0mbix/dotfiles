# Enable color support of ls and also add handy aliases
[ -x /usr/bin/dircolors ] && eval "$(dircolors -b)"

# Generic aliases
alias l='ls -l'
alias l1='ls -1'
alias lR='ls -lR'
alias la='ls -a'
alias laR='ls -aR'
alias lal='ls -al'
alias lalR='ls -alR'
alias lsd='ls -l | grep "^d"'
alias p='ps aux'
alias find_git_repos='find ~ -type d -name ".git" -print|egrep -v "$HOME/Library|$HOME/.Trash"'
alias svim='sudo -e'
alias scat='sudo cat'
alias c='clear'
alias cd..='cd ..'
alias cd...='cd ../..'
alias cd....='cd ../../..'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'
alias d='df -h'
alias h='history'
alias recall='history | grep'
alias rsync='rsync --progress --stats'
alias colours='for i in {0..255}; do printf "\x1b[38;5;${i}mcolour${i} "; done'
alias pign='ping' # doh!
alias running_vms='VBoxManage list runningvms | cut -f2 -d\"'
alias serve_cwd='python -m SimpleHTTPServer'
alias cat_without_comments="grep -v -E '^$|^[[:blank:]]*#|^;|^[[:blank:]]*//|(/\*([^*]|(\*+[^*/]))*\*+/)|(//.*)' $1"
alias pubkey="cat ~/.ssh/id_ed25519.pub | pbcopy | printf 'Public key copied to pasteboard.\n'"
alias public-ip='curl https://icanhazip.com/'
alias urlencode='python -c "import sys, urllib as ul; print ul.quote_plus(sys.argv[1]);"'
alias j='jobs'
alias p8='ping 8.8.8.8'
alias vd='vimdiff'
alias countdown='mpg321 -q ~/Dropbox/Documents/Sounds/countdown.mp3'
alias youtube-dl-mp3='youtube-dl --extract-audio --audio-format mp3'
alias weather='clear; curl http://wttr.in/'
alias tmux='TERM=screen-256color tmux'
alias planetrock="mplayer 'http://tx.sharp-stream.com/icecast.php?i=planetrock.mp3'"
alias showpath="echo $PATH | tr ':' '\n' | nl"
alias da='direnv allow'
alias n='navi --print'
alias shrug='echo -n "¯\\_(ツ)_/¯"'

# This, allows me to quickly copy a pastable HEREDOC on to new hosts :)
alias copyinputrc='echo -e "cat > ~/.inputrc <<EOF $(echo; cat ~/.inputrc)\nEOF\nbind -f ~/.inputrc" | pbcopy'

# MySQL
alias mydbs='mysql -e "show databases"'
alias mytables="mysql $1 -e 'show tables'"

# Git
alias gc='git commit -m'
alias gs='git st'
alias gd='git diff'
alias gdc='git diff --cached'
alias gr='git remote -v'
alias gpom='git push origin master'
alias gl='git lg'
alias gdlc='git diff-last-commit'
alias gp='git pull'
alias gbt='git branch-toggle'
alias gnb='git checkout -b'
alias gco='git checkout'
alias gf='git fetch'
alias gpap='git push-and-pr'
alias gcomagp='git checkout master && git pull'

# Docker
alias dk='docker'
alias dkb='docker build'
alias dki='docker images'
alias dkl='docker login'
alias dkp='docker ps'
alias dkr='docker run'
alias dkrm='docker rm'
alias dkrmi='docker rmi'

# Kitchen
alias kccv='kitchen create && kitchen converge && kitchen verify'
alias kcr='kitchen create'
alias kcon='kitchen converge'
alias kv='kitchen verify'
alias kl='kitchen login'
alias kt='kitchen test'
alias kd='kitchen destroy'

# Terraform
alias tf='terraform'
alias tg='terragrunt'
alias tg_cache_clear='find . -name .terragrunt-cache | xargs -n1 rm -rf'

# Kubernetes
alias k='kubectl'
alias kl='kubectl logs -f'
alias ke='kubectl get events -w'
alias kpf='kubectl port-forward'
alias kdump='kubectl get all --all-namespaces'
alias kubefwd='sudo kubefwd'
alias kp='kube-prompt'
alias ns='kubens'
alias ctx='kubectx'

# AWS
alias aws-account-id='aws sts get-caller-identity | jq -r .Account'
alias aws-running-instances='aws ec2 describe-instances --output=json --filters "Name=instance-state-name,Values=running"'

# Directories
alias projects='cd ~/Dropbox/Projects'
alias dotfiles='cd ~/Dropbox/Configs/dotfiles'
alias study='cd ~/Dropbox/Study'
alias downloads='cd ~/Downloads'

# Proxy
alias proxyon='source ~/.sh/proxy'
alias proxyoff='unset {HTTP,HTTPS,FTP}_PROXY {http,https,ftp}_proxy no_proxy NO_PROXY'
alias proxystatus='env | grep -i proxy | sort'

# Setup vim/nvim/vi
if command -v nvim > /dev/null 2>&1; then
  if [ ! -e ~/.config/nvim/init.vim ]; then
    echo "You need to install your init.vim"
  fi
  alias vim='nvim'
  alias vi='nvim'
elif command -v vim > /dev/null 2>&1; then
  if [ ! -e ~/.vimrc ]; then
    echo "You need to install your ~/.vimrc"
  fi
  alias vi='vim'
else
  alias vim='vi'
fi

if command -v gopass > /dev/null 2>&1; then
  alias pass='gopass'
fi

if command -v bat > /dev/null 2>&1; then
  alias cat='bat'
fi
