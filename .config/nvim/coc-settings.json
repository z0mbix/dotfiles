{
  "python.autoComplete.addBrackets": true,
  "python.linting.mypyEnabled": true,
  "python.venvFolders": [".venvs", "venvs", ".pyenv", ".direnv"],
  "python.venvPath": "~/.local/share/virtualenvs/",
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod"],
      "filetypes": ["go"]
    },
    "terraform": {
      "command": "terraform-lsp",
      "filetypes": ["terraform"],
      "initializationOptions": {}
    }
  }
}
